<!DOCTYPE html>
<html>
<head>
  <title>MagazinOnline</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>




<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <% if utilizatorul_este_logat %>

                    <li class="sidebar-brand">
                        <%= link_to "Magazin Online", { controller: "store" } %>
                    </li>
                    <li>
                        <%= link_to "Lista produse", { controller: "store" } %>
                    </li>
                    <li>
                        <%= link_to "Cosul de cumparaturi", { controller: "carts" } %>
                    </li>
                    <li>
                        <%= link_to "Log out", { :action=>"destroy", :controller=>"sessions" } %>
                    </li>

                    <% if utilizatorul_este_admin_boolean %>
                        <li>
                            <%= link_to "Adauga produse", { :action=>"new", :controller=>"products" } %>
                        </li>
                    <% end %>
                    
                    <li>
                        <%= link_to "Editeaza utilizatorul", { :controller=>"users" } %>
                    </li>

                <% end %>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
						
						<a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>

                    	<%= yield %>
                        
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>

</body>



</html>
