<% if flash[:alert] %>

	<%= flash[:alert] %>

<% end %>

<div class="row">

	<div class="col-md-4 col-md-offset-4">

		<%= form_tag({:class => 'form-signin'}) do %>
		
		        <h2 class="form-signin-heading">Trebuie sa va logati</h2>

		        <label class="sr-only">Nume</label>
		        <%= text_field_tag :name, params[:name], placeholder: 'Numele utilizatorului', class: 'form-control' %>
		        
		        <label class="sr-only">Parola</label>
		        <%= password_field_tag :password, params[:password], placeholder: 'Parola utilizatorului', class: 'form-control'  %>

		        <%= submit_tag "Login", class: 'btn btn-lg btn-primary btn-block' %>
		        

		<% end %> 

	</div>

</div>