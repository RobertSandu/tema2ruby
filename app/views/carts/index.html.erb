<p id="notice"><%= notice %></p>

<div class="row">

  <div class="col-md-4 col-md-offset-4">
    <p> Lista produse din cosul de cumparaturi </p>
  </div>
  
  <% for item in @cart.line_items %>

    <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
      <div class="thumbnail" >
        <%= image_tag(item.product.image_url, :class => "img-responsive") %>
        <div class="caption">
          <div class="row">
            <div class="col-md-6 col-xs-6">
                  <h3><%= item.product.title %></h3>
            </div>
            <div class="col-md-6 col-xs-6 price">
              <h3>
                <label>Pret <%= number_to_currency(item.product.price) %></label>
              </h3>
            </div>
          </div>

          <p><%= item.product.description %></p>
      
        </div>
      </div>
    </div>
  <% end %>

</div>

<div class="row">

  <div class="col-md-4 col-md-offset-4">

    <%= button_to 'Sterge cosul', @cart, :method => :delete, :confirm => 'Esti sigur ca vrei sa stergi cosul de cumparaturi?', :class => "btn btn-success btn-product" %>
    <%= button_to 'Check out', @cart, :method => :delete, :confirm => 'Esti sigur ca vrei sa cumperi toate produsele din cosul de cumparaturi?', :class => "btn btn-success btn-product" %>

  </div>

</div>